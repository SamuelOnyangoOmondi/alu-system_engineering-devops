        listen 80 default_server;
        listen [::]:80 default_server;
        root /var/www/html;
        index index.html;
        error_page 404 /error404.html;
        server_name _;
        
        add_header X-Served-By $hostname;
        
        location /redirect_me {
           return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4/;
        }
}
' | sudo tee /etc/nginx/sites-available/default

